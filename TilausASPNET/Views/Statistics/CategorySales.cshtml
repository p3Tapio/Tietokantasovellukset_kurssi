
@{
    ViewBag.Title = "CategorySales";
}
@section scripts{
    <script type="text/javascript">

        let labelTexts = [@Html.Raw(ViewBag.categoryName)];
        let dataValues = [@ViewBag.categorySales];

        var ctx = document.getElementById('barcanvas').getContext('2d');
            var myChart = new Chart(ctx, {
            type: 'bar',
                data: {
                    labels: labelTexts,
                datasets: [{
                    label: 'Sales of 1997',
                    data: dataValues,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)',
                           'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)',
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });

    </script>
}

<h2 class="mb-4 ml-3">Sales by Category </h2>
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <canvas id="barcanvas"></canvas>
        </div>
    </div>
</div>
