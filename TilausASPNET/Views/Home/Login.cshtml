@model TilausASPNET.Models.Logins

@{
    ViewBag.Title = "Login";
}

<h2 style="margin-left:15px">Login</h2>


@using (Html.BeginForm("Authorize", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.LoginId)

        <div class="form-group">
            <p> &nbsp; &nbsp; &nbsp;Käyttäjätunnus</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p> &nbsp; &nbsp; &nbsp;Salasana</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
            </div>
        </div>
        <p class="text-danger" style="margin-left:2%">&nbsp;@ViewBag.LoginMessage</p><br/>
        <p class="text-danger" style="margin-left:2%">&nbsp;@Html.DisplayFor(model => model.LoginErrorMessage)</p>

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kirjaudu" class="btn btn-outline-secondary" />
        </div>

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
