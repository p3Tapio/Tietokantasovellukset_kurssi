@model TilausASPNET.Models.Logins

@{
    ViewBag.Title = "Etusivu";
}
<br />
<br />
<div class="jumbotron">
    <h1>ASP.NET MVC</h1>
    <p class="lead"><img class="scale-in-center" src="~/Icons/NucleoTest.svg" height="15" width="15" />ASP.NET koulutyön etusivu. Yläpalkin valikoiden kautta löytyy sovelluksen varsinainen sisältö</p>
    <button class=" btn btn-outline-secondary" type="button" data-toggle="modal" data-target="#loginModal">Klikkaa modal auki!</button>
   

</div>


@*-------------------------------------------*@
@*MODAL:*@
@using (Html.BeginForm("Authorize", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="modal" id="loginModal" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.LoginId)

                        <div class="form-group">
                            <p> &nbsp; &nbsp; &nbsp;Käyttäjätunnus</p>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <p> &nbsp; &nbsp; &nbsp;Salasana</p>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <p class="text-danger" style="margin-left:2%">&nbsp;@ViewBag.LoginMessage</p>
                        <p class="text-danger" style="margin-left:2%">&nbsp;@Html.DisplayFor(model => model.LoginErrorMessage)</p>
                        <input type="submit" value="Kirjaudu" class="btn btn-outline-secondary omaLink" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
