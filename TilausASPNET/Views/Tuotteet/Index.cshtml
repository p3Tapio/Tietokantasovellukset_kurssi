@model IEnumerable<TilausASPNET.Models.Tuotteet>

@{
    ViewBag.Title = "Index";
}

<h2 class="mb-4 ml-3">Tuotteet</h2>
<div class="container">
    <p>
        <a class="btn btn-outline-secondary" href="~/Tuotteet/Create" style="color:black"><img src="~/Icons/plus-square.svg" height="20" width="20" />&nbsp;&nbsp;Lisää uusi tuote</a>
    </p>
    <hr/>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3">
                <div class="card mb-3">
                    <h3 class="card-header">@Html.DisplayFor(modelItem => item.Nimi)</h3>
                    <div class="card-body">
                    </div>
                    <img style="height: 80%; width: 80%; display: block; margin-left:10%; margin-bottom: 10%;" src=@Html.DisplayFor(modelItem => item.ImageLink) alt="Card image">

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Kappale hinta: @Html.DisplayFor(modelItem => item.Ahinta)</li>
                        <li class="list-group-item">Tuote ID: @Html.DisplayFor(modelItems => item.TuoteID)</li>
                    </ul>
                    <div class="card-body p-3 text-center" style="line-height:3; filter:invert(40%);">
                        <a class="omaLink ml-2" title="Edit" href="~/Tuotteet/Edit/@item.TuoteID" style="width:150px"><img class="scale-in-center" src="~/Icons/pencil-square.svg" height="40"/></a>
                        <a class="omaLink ml-2" title="Delete" href="~/Tuotteet/Delete/@item.TuoteID" style="width:150px"><img src="~/Icons/x-square.svg" height="35" /></a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>