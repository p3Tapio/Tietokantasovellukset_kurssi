<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Mun ASP.NET Appi</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-lg-5">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/home/index">Etusivu &nbsp; | <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Yritystiedot </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/home/about">About</a>
                        <a class="dropdown-item" href="/home/contact">Yhteystiedot</a>
                        <a class="dropdown-item" href="/home/map">Sijainti</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/asiakkaat"> Asiakkaat </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Henkilot">Henkilöt </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/tuotteet">Tuotteet  </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Tilaustiedot </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/tilaukset">Tilaukset</a>
                        <a class="dropdown-item" href="/tilausrivit">Tilausrivit</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Postitoimipaikat">Postitoimipaikat</a>
                </li>
                <li class="nav-item" style="color:aliceblue">
                    <p style="color:aliceblue; margin-top: 9px;">&nbsp; @Html.ActionLink("Kirjaudu ulos", "Logout", "Home") &nbsp;&nbsp;</p>
                </li>
                <li class="nav-item">
                    <p style="color:aliceblue; margin-top: 9px;">|&nbsp; @ViewBag.LoggedStatus</p>
                </li>

            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="page-footer">
            <p>&copy; @DateTime.Now.Year - Mun ASP.NET Appi</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
