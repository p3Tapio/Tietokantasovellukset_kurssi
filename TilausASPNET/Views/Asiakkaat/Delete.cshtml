@model TilausASPNET.Models.Asiakkaat

@{
    ViewBag.Title = "Delete";
}

<h2></h2>

<h3>Haluatko poistaa asiakastiedon?</h3>
<hr>
<div>


    <dl class="dl-horizontal">
        <dt>Asiakastunnus</dt>
        <dd class="ddLine">@Html.DisplayFor(model => model.AsiakasID)</dd>

        <dt style="line-height: 200%">Yritys</dt>
       
        <dd class="ddLine"> @Html.DisplayFor(model => model.Nimi) </dd>
        <dd class="ddLine"> @Html.DisplayFor(model => model.Osoite)</dd>
        <dd class="ddLine">
            @Html.DisplayFor(model => model.Postinumero)
            @Html.DisplayFor(model => model.Postitoimipaikat.Postitoimipaikka)
        </dd>


    </dl>
    <hr />
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-outline-secondary" />
            <button class="btn btn-outline-secondary"> @Html.ActionLink("Back to List", "Index")</button>
        </div>
    }

</div>
