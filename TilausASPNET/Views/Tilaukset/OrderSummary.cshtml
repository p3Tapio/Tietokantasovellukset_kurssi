@model IEnumerable<TilausASPNET.ViewModels.OrderSummaryData>

@{
    ViewBag.Title = "OrderSummary";
}

<h2 class="mb-4 ml-3">Tilausten yhteenveto</h2>

<div class="container">

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th> @Html.DisplayNameFor(model => model.TilausID)</th>
                <th> @Html.DisplayNameFor(model => model.TilausriviID)</th>
                <th> @Html.DisplayNameFor(model => model.TuoteID) </th>
                <th>Tuote </th>
                <th> @Html.DisplayNameFor(model => model.Maara) </th>
                <th style="white-space:nowrap"> A-hinta</th>
                @*<th> @Html.DisplayNameFor(model => model.ImageLink) </th>*@
                <th> @Html.DisplayNameFor(model => model.AsiakasID)</th>
                <th> @Html.DisplayNameFor(model => model.AsiakasNimi) </th>
                <th> @Html.DisplayNameFor(model => model.Toimitusosoite) </th>
                <th> @Html.DisplayNameFor(model => model.Tilauspvm) </th>
                <th> @Html.DisplayNameFor(model => model.Toimituspvm)</th>


            </tr>
        </thead>

        @foreach (var item in Model)
        {
                string tilauspvm = item.Tilauspvm.ToString().TrimEnd('.', ':', '0');
                string toimituspvm = item.Toimituspvm.ToString().TrimEnd('.', ':', '0');
            <tbody>
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.TilausID)</td>
                    <td> @Html.DisplayFor(modelItem => item.TilausriviID)</td>
                    <td> @Html.DisplayFor(modelItem => item.TuoteID) </td>
                    <td> @Html.DisplayFor(modelItem => item.TuoteNimi) </td>
                    <td> @Html.DisplayFor(modelItem => item.Maara) </td>
                    <td> @Html.DisplayFor(modelItem => item.TilausAhinta)</td>
                    @*<th> @Html.DisplayFor(modelItem => item.ImageLink) </th>*@
                    <td> @Html.DisplayFor(modelItem => item.AsiakasID)</td>
                    <td> @Html.DisplayFor(modelItem => item.AsiakasNimi) </td>
                    <td> @Html.DisplayFor(modelItem => item.Toimitusosoite)<br /> @Html.DisplayFor(modelItem => item.Postinumero)  @Html.DisplayFor(modelItem => item.Postitoimipaikka) </td>
                    <td> @tilauspvm</td>
                    <td> @toimituspvm</td>
        

                </tr>
            </tbody>
        }

    </table>
</div>
